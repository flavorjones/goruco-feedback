<h1>Listing responses</h1>

<%= link_to 'New Response', new_response_path %>

<br>
<br>

<table>
  <thead>
    <tr>
      <th>Years using ruby</th>
      <th>City</th>
      <th>State</th>
      <th>Stay</th>
      <th>Thoughts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.years_using_ruby %></td>
        <td><%= response.city %></td>
        <td><%= response.state %></td>
        <td><%= response.stay %></td>
        <td><%= response.thoughts %></td>
        <td><%= link_to 'Show', response %></td>
        <td><%= link_to 'Edit', edit_response_path(response) %></td>
        <td><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Response', new_response_path %>
